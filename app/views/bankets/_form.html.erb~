<%= form_for(@banket) do |f| %>
  <% if @banket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@banket.errors.count, "error") %> prohibited this banket from being saved:</h2>

      <ul>
      <% @banket.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :arrival %><br>
    <%= f.datetime_select :arrival %>
  </div>
  <div class="field">
    <%= f.label :departure %><br>
    <%= f.datetime_select :departure %>
  </div>
  <div class="field">
    <%= f.label :places %><br>
    <%= f.number_field :places %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :post_id %><br>
    <%= f.text_field :post_id %>
  </div>

