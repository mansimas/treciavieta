<h1>Listing bankets</h1>

<table>
  <thead>
    <tr>
      <th>Arrival</th>
      <th>Departure</th>
      <th>Places</th>
      <th>Price</th>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bankets.each do |banket| %>
      <tr>
        <td><%= banket.arrival %></td>
        <td><%= banket.departure %></td>
        <td><%= banket.places %></td>
        <td><%= banket.price %></td>
        <td><%= banket.post %></td>
        <td><%= link_to 'Show', banket %></td>
        <td><%= link_to 'Edit', edit_banket_path(banket) %></td>
        <td><%= link_to 'Destroy', banket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Banket', new_banket_path %>
