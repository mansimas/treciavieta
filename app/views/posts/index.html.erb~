<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Begin</th>
      <th>End</th>
      <th>Adult</th>
      <th>Children</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.category %></td>
        <td><%= post.begin %></td>
        <td><%= post.end %></td>
        <td><%= post.adult %></td>
        <td><%= post.children %></td>
        <td><%= link_to 'Show', post_path(id: post.id) %></td>
        <td><%= link_to 'Edit', edit_post_path(id: post.id) %></td>
        <td><%= link_to 'Destroy', post_path(id: post.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

