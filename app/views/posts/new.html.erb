
<h1><%= t(:form_title) %></h1>


<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
<h2><%= t(:prohibited_this_post_from_being_saved) %></h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div style="width:300px;">
  <div class="field">
  <%= t(:category) %> <br>
  <%= f.select :category, options_for_select([t("wedding"), t("christening"), t("banquet")]) %>
  </div>
  <div class="field">
	  <%= t(:choose_event) %><br>
    <%= f.date_select :begin, :default => Time.now.to_date %>
  </div>
  <div class="field">
    <%= t(:choose_event_end) %><br>
    <%= f.date_select :end, :default => Time.now.tomorrow.to_date %>

  </div>

  <div class="field">
    <%= t(:choose_people) %><br>
    <%= f.text_field :people,  
	    :maxlength=>"2", :value => 30 %>
    </div>
    </div>
    <div class="actions">
	    <%= f.submit t(:new_post_submit) %>
  </div>
<% end %>



